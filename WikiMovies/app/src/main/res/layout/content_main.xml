<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <TableLayout
        android:id="@+id/panel1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/imageView_1"
                android:layout_width="126dp"
                android:layout_height="158dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/poster1" />

            <ImageView
                android:id="@+id/imageView_2"
                android:layout_width="126dp"
                android:layout_height="158dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/poster2" />

            <ImageView
                android:id="@+id/imageView_3"
                android:layout_width="126dp"
                android:layout_height="158dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/poster3" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/imageView_4"
                android:layout_width="126dp"
                android:layout_height="158dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/poster4" />

            <ImageView
                android:id="@+id/imageView_5"
                android:layout_width="126dp"
                android:layout_height="158dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/poster5" />

            <ImageView
                android:id="@+id/imageView_6"
                android:layout_width="126dp"
                android:layout_height="158dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/poster6" />
        </TableRow>
    </TableLayout>


</LinearLayout>